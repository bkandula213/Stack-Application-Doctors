<%- include("../partials/header") %>
    <h1 class="text-primary"><u> Best Doctors </u></h1>
    <ol class="list-group list-group-numbered">

        <% allDoctors.forEach(function(doctor){ %>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <!-- Displays the doctor data with the attributes specified -->

                    <div class="fw-bold">Name: <%= doctor.name %>
                    </div>
                    <ul>
                        <li>Department: <%= doctor.department %>
                        </li>
                        <li>Rating: <%= doctor.rating %>
                        </li>
                        <li>Specialities: <%= doctor.specialities %>
                        </li>
                        <li>Experience: <%= doctor.experience %>
                        </li>
                        <li>Description: <%= doctor.description %>
                        </li>
                    </ul>
                </div>
                <!-- Categorizes the doctor based on the success rate -->
                <% if(doctor.successRate >= 75) { %>
                    <span class="badge bg-primary rounded-pill fs-6"><%= doctor.successRate %> %</span>     
                <% } %>
                <% if(doctor.successRate < 75 && doctor.successRate >= 50 ) {    %>
                    <h3 class="badge bg-warning rounded-pill fs-6"><%= doctor.successRate %> %</span>     
                <% } %>
                
                <% if(doctor.successRate < 50) { %>
                    <span class="badge bg-danger rounded-pill fs-6"><%= doctor.successRate %> %</span>     
                <% } %>


            </li>
            <% }) %>
    </ol>

    <%- include("../partials/footer") %>