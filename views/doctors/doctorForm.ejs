<%- include("../partials/header") %>
<!-- Doctor form to create a doctor  -->
	<form action="/doctor" method="POST">
		<h1>Create Doctor</h1>
<!-- Attributes in the create doctor page  -->
		<label for="name">Full Name:</label>
		<input type="text" name="name" placeholder="First Last">

		<label for="Rating">Department:</label>
		<input type="text" name="department" placeholder="Department Name">

		<label for="Rating">Rating:</label>
		<input type="number" name="rating" placeholder="0.0">

		<label for="specialities">Specialities:</label>
		<input type="text" name="specialities" placeholder="disease1, disease2,.........">

		<label for="experience">Experience (in months):</label>
		<input type="number" name="experience" placeholder="0.0">

		<label for="successRate">Success Rate (%):</label>
		<input type="number" step="0.1" name="successRate" placeholder="0.0">

		<label for="description">Description:</label>
		<textarea name="description" cols="30" rows="10"></textarea>

		<button type="submit">
			Submit
		</button>

	</form>
<!-- Once created it will added to all doctors  -->
	<a href="/doctor/all">Display all Doctors</a>

