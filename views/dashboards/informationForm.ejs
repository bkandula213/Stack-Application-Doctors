<%- include("../partials/header") %>
  <main>
    <div class="py-3 text-center">
      <img class="d-block mx-auto mb-2" src="https://img.icons8.com/bubbles/344/info.png" alt="" width="70" height="70">
      <h2>info form</h2>
      <p class="lead">A basic information to know a bit more about you</p>
    </div>
  </main>

<!-- Page added to increase scope to understand the patient  medical condition -->
  <div id="form" class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <!-- Added the post action to navigate from dashboard to information -->
      <form method="post" action="/dashboard/information/post/<%= doctorID %>">
          <!-- Adding this attributes tothe information page -->
        <div class="mb-3">
          <label for="name" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="First Last">
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>

        <div class="col-12 mb-3">
          <label for="insuranceProvider" class="form-label">insuranceProvider</label>
          <input type="text" class="form-control" id="insuranceProvider" name="insuranceProvider" placeholder=""
            required>
          <div class="invalid-feedback">
            Your Insurance Provider
          </div>
        </div>

        <div class="col-12 mb-3">
          <label for="address" class="form-label">Address</label>
          <input type="text" class="form-control" id="address" name="address" placeholder="1234 Main St" required>
          <div class="invalid-feedback">
            Please enter your address.
          </div>
        </div>
<!-- Describing the timeperiod of the issue facing and can choose timing -->
        <div class="col-md-4 mb-3">
          <label for="period" class="form-label">How long have you been facing this issue</label>
          <select class="form-select" id="period" name="period" required>
            <option value="">choose an timing </option>
            <option>
              < 1 week</option>
            <option>a month</option>
            <option>a year</option>
            <option>> year</option>
          </select>
          <div class="invalid-feedback">
            Please choose appropriate disease
          </div>
        </div>
<!-- Checking any previous medical history -->
        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" name="consulted" id="flexCheckIndeterminate">
          <label class="form-check-label" for="flexCheckIndeterminate">
            Did you consult any doctor prior?
          </label>
        </div>
<!-- Symptom description -->
        <div class="input-group mb-3">
          <span class="input-group-text">A bit more about <br> your symptoms</span>
          <textarea class="form-control" name="facing" aria-label="With textarea"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </div>

    </form>
  </div>
  <div class="col-lg-2"></div>

  </div>

  <%- include("../partials/footer") %>